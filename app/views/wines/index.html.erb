<p id="notice"><%= notice %></p>

<h1>Listing Wines</h1>

<table>
  <thead>
    <tr>
      <th>Vineyard</th>
      <th>Appellation</th>
      <th>Varietal</th>
      <th>Name</th>
      <th>Label url</th>
      <th>Api url</th>
      <th>Pricemin</th>
      <th>Pricemax</th>
      <th>Attributes</th>
      <th>Sku</th>
      <th>Api provider</th>
      <th>Api</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.vineyard %></td>
        <td><%= wine.appellation %></td>
        <td><%= wine.varietal %></td>
        <td><%= wine.name %></td>
        <td><%= wine.label_url %></td>
        <td><%= wine.api_url %></td>
        <td><%= wine.pricemin %></td>
        <td><%= wine.pricemax %></td>
        <td><%= wine.attributes %></td>
        <td><%= wine.sku %></td>
        <td><%= wine.api_provider %></td>
        <td><%= wine.api_id %></td>
        <td><%= link_to 'Show', wine %></td>
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

